<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/task_item_background">

    <CheckBox
        android:id="@+id/list_is_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:buttonTint="@color/blue"
        android:scaleX="1.30"
        android:scaleY="1.30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_task_title"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:layout_marginStart="40dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_is_complete"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="做一顿早餐" />

    <TextView
        android:id="@+id/list_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/list_task_title"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="7月5日" />

</androidx.constraintlayout.widget.ConstraintLayout>