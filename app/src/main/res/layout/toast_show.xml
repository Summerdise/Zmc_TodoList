<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/input_tips"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toast_width"
        android:layout_gravity="center"
        android:background="@drawable/toast_tips"
        android:gravity="center"
        android:paddingHorizontal="@dimen/toast_padding_horizontal"
        android:textColor="@color/grey"
        android:textSize="@dimen/toast_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="username is wrong!" />
</androidx.constraintlayout.widget.ConstraintLayout>